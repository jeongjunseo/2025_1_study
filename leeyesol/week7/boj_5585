#include <stdio.h>

void Change()  
{
    int Coin[6] = { 500, 100, 50, 10, 5, 1 };   //사용 가능한 동전 단위 (큰 단위부터 정렬렬)

    int cnt = 0;    //거스름돈에 필요한 동전의 개수를 저장하는 변수

    int N;  //손님이 낸 돈을 저장할 변수

    int i = 0;  // 배열 인덱스용 변수

    scanf("%d", &N);    //손님이 낸 금액 입력받기기

    N = 1000 - N;   //물건 가격이 1000원이라 가정하고 거스름돈 계산 

    while (N > 0)   
    {
        if (N >= Coin[i])   
        {
            N -= Coin[i];   // 동전 하나 사용하여 거스름돈 차감
            cnt++;          // 동전 개수 증가
        }
        else
            i++;            // 현재 동전으로는 거슬러 줄 수 없으므로 다음 작은 동전으로 이동
    }

    printf("%d", cnt);  //총 사용한 동전 개수 출력력
}

int main()
{
    Change();   //거스름돈 계산 함수 호출출
}